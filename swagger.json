{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Simple CRUD server with MongoDB and Express",
      "description": "Circles Onboarding Assignment 1",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/jobs/listall": {
            "get": {
                "tags": ["Users"],
                "summary": "Retrieves all the jobs in the database"
            },
            "responses": {
                "200": {
                    "description": "ok"
                },
                "400": {
                    "description": "bad request"
                },
                "500": {
                    "description": "internal server error"
                }
            }
        },
        "/jobs/list?numberJobs=NUMBER": {
            "get": {
                "tags": ["Users"],
                "summary": "Retrieves the jobs from the database with the specified status",
                "parameters": [
                    {
                        "name": "numberJobs",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "description": "Returns the last NUMBER jobs submitted"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    },
                    "400": {
                        "description": "bad request"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/jobs/submit": {
            "post": {
                "tags": ["Users"],
                "summary": "Submits a job and returns a job id",
                "consumes": ["application/json"],
                "parameters": [
                    {
                        "name": "job",
                        "in": "body",
                        "schema": {
                            "$ref": "#definitions/Job"
                        }
                    }
                ]
            }
        },
        "/jobs/delete": {
            "delete": {
                "tags": ["Users"],
                "summary": "Deletes a job from the database with given jobId",
                "parameters": [
                    {
                        "name": "jobId",
                        "in": "query",
                        "required": true,
                        "type": "integer"
                    }
                ]
            }
        }
    },
    "definitions": {
        "Job": {
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                }
            }

        }
    }
}